<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>oh-boot-framework</artifactId>
        <groupId>com.gizwits</groupId>
        <version>1.0</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>oh-example-boot</artifactId>
    <packaging>jar</packaging>

    <name>oh-example-boot</name>
    <url>http://maven.apache.org</url>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
    <dependencies>
        <dependency>
            <groupId>com.gizwits</groupId>
            <artifactId>oh-druid-boot</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>com.gizwits</groupId>
            <artifactId>oh-common-boot</artifactId>
            <version>1.0</version>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <!--可以生成不含依赖包的不可执行Jar包-->
                        <configuration>
                            <mainClass>com.gizwits.main.App</mainClass>
                            <layout>JAR</layout>
                            <executable>true</executable>
                            <classifier>exec</classifier>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <excludes>
                        <exclude>*.properties</exclude>
                        <exclude>*.xml</exclude>
                        <exclude>*.xml</exclude>
                        <exclude>*.ico</exclude>
                    </excludes>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
